<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adsoft.girls_tatoos_gallery" >

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.internet" />

    <application
        android:name="com.adsoft.girls_tatoos_gallery.Myapplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:name="com.adsoft.girls_tatoos_gallery.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:name="com.adsoft.girls_tatoos_gallery.HorizontalLayoutFragment" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:name="com.adsoft.girls_tatoos_gallery.ViewImageActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:name="com.adsoft.girls_tatoos_gallery.MainActivity" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:name="com.adsoft.girls_tatoos_gallery.GrirdviewActivity"
            android:label="@string/title_activity_grirdview" >
        </activity>
    </application>

</manifest>
